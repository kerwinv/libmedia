{
  "name": "libmedia",
  "version": "0.0.1",
  "description": "Web 平台音视频媒体处理库",
  "sideEffects": [
    "./src/avrender/pcm/AudioSourceWorkletProcessor.ts",
    "./src/avrender/pcm/AudioSourceWorkletProcessor2.ts",
    "./src/common/timer/workerSetTimeoutTask.ts",
    "./src/cheap/heap.ts",
    "./src/cheap/thread/initClass.ts",
    "./src/cheap/thread/initFunction.ts",
    "./src/cheap/thread/initModule.ts",
    "./src/cheap/webassembly/runThread.ts"
  ],
  "scripts": {
    "build-transformer": "cross-env NODE_ENV=production webpack --progress --env transformer=1 release=1",
    "build-wasm-opt": "cross-env NODE_ENV=production webpack --progress --env wasm_opt=1 release=1",
    "build-cheap-polyfill": "cross-env NODE_ENV=production webpack --progress --env polyfill=1 release=1",
    "build-webassembly-runner": "cross-env NODE_ENV=production webpack --progress --env webassembly_runner=1 release=1",
    "build-pcm-worklet-processor": "cross-env NODE_ENV=production webpack --progress --env pcm_worklet_processor=1 release=1",
    "build-avplayer": "cross-env NODE_ENV=production webpack --progress --env avplayer=1 release=1",
    "build-avplayer-legacy": "cross-env NODE_ENV=production webpack --progress --env avplayer=1 release=1 legacy=1",
    "build-avplayer-dev": "cross-env NODE_ENV=development node --max-old-space-size=8192 ./node_modules/webpack/bin/webpack.js --progress --env avplayer=1 release=0",
    "build-avplayer-ui": "cross-env NODE_ENV=development webpack --progress --env avplayer=1 ui=1 release=1",
    "build-avplayer-ui-dev": "cross-env NODE_ENV=development webpack --progress --env avplayer=1 ui=1 release=0",
    "build-avtranscoder": "cross-env NODE_ENV=production webpack --progress --env avtranscoder=1 release=1",
    "build-avtranscoder-dev": "cross-env NODE_ENV=development webpack --progress --env avtranscoder=1 release=0",
    "doc": "typedoc --options ./typedoc.json",
    "server": "serve -p 8000 --cors --config ./test/serve.json",
    "eslint": "./node_modules/.bin/eslint -o=report.json -f=json './src/**/*.ts' -c=./eslint/typescript.js --rulesdir=./eslint/rules --ignore-path=./.eslintignore",
    "eslint-fix": "./node_modules/.bin/eslint './src/**/*.ts' -c=./eslint/typescript.js --rulesdir=./eslint/rules --ignore-path=./.eslintignore --fix",
    "eslint-check": "./node_modules/.bin/eslint './src/**/*.ts' -c=./eslint/typescript.js --rulesdir=./eslint/rules --ignore-path=./.eslintignore",
    "build-debug": "cross-env NODE_ENV=development node --inspect-brk ./node_modules/webpack/bin/webpack.js --progress --env avplayer=1 release=0",
    "postinstall": "simple-git-hooks",
    "server-https": "serve -p 8443 --cors --ssl-cert ./test/cert.pem --ssl-key ./test/key.pem"
  },
  "simple-git-hooks": {
    "commit-msg": "node scripts/verify-commit.js",
    "pre-commit": "node scripts/pre-commit.js"
  },
  "author": "Gaoxing Zhao",
  "license": "LGPL-3.0-or-later",
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.23.9",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/runtime-corejs2": "^7.23.9",
    "@types/jest": "^23.3.14",
    "@types/loader-utils": "^2.0.6",
    "@types/node": "^22.10.1",
    "@types/path-browserify": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "autoprefixer": "^6.3.6",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3",
    "dts-bundle-webpack": "^1.0.2",
    "eslint": "^8.46.0",
    "glslify-loader": "^2.0.0",
    "html2js": "^0.2.0",
    "loader-utils": "^2.0.0",
    "node-media-server": "^2.6.2",
    "postcss": "^5.0.19",
    "postcss-css-variables": "^0.17.0",
    "raw-loader": "^4.0.0",
    "rider": "^2.0.0",
    "schema-utils": "^3.1.0",
    "serve": "^14.2.4",
    "simple-git-hooks": "^2.11.1",
    "stylus": "^0.54.2",
    "terser": "^5.36.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^9.4.4",
    "typedoc": "^0.27.2",
    "typedoc-plugin-rename-defaults": "^0.7.1",
    "typescript": "^5.7.2",
    "webpack": "^5.92.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "worker-loader": "^3.0.8",
    "yargs": "^13.3.0"
  },
  "dependencies": {
    "ass-compiler": "^0.1.13",
    "assjs": "0.1.1",
    "yox": "^1.0.0-alpha.408"
  }
}
